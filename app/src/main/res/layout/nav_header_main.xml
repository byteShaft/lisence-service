<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:id="@+id/layout_text_result"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:text="Result: "
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="start"
       />
        <TextView
            android:id="@+id/text_result"
            android:text="one two three four"
            android:gravity="end"
            android:textColor="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </LinearLayout>

    <View
        android:layout_below="@+id/layout_text_result"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#d13033"/>

    <LinearLayout
        android:id="@+id/layout_text_date"
        android:layout_below="@+id/layout_text_result"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="Date: "
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="start"
            />
        <TextView
            android:id="@+id/date"
            android:textColor="@android:color/darker_gray"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_text_result"
            android:textStyle="bold"
            android:textSize="18sp"
            />
    </LinearLayout>


    <View
        android:layout_below="@+id/layout_text_date"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#d13033"/>

    <LinearLayout
        android:id="@+id/layout_text_type"
        android:layout_below="@+id/layout_text_date"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="Type of Test:"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="start"
            />
        <TextView
            android:id="@+id/text_test_type"
            android:layout_below="@id/date"
            android:textColor="@android:color/darker_gray"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Test" />
    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_below="@+id/layout_text_type"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#d13033"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/view"
        android:id="@+id/button"
        android:background="@drawable/another_try"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
